<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Web"
            id="eclipse-web-kit">
      </category>
      <view
            name="Html palette"
            icon="icons/sample.gif"
            category="eclipse-web-kit"
            class="com.eclipse.web.kit.views.HtmlPaletteView"
            id="com.eclipse.web.kit.views.HtmlPaletteView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.eclipse.web.kit.views.HtmlPaletteView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.eclipse.web.kit.preferences.WebKitPreferencePage"
            id="com.eclipse.web.kit.preferences.WebKitPreferencePage"
            name="Eclipse web kit">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.eclipse.web.kit.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="eclipse-web-kit.contribution.project"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               id="eclipse-web-kit.menu.project"
               label="Eclipse Web Kit"
               path="additions">
            <separator
                  name="group.project">
            </separator>
         </menu>
         <action
               class="com.eclipse.web.kit.popup.actions.TestBrokenLinksAction"
               enablesFor="1"
               id="eclipse-web-kit.newAction"
               label="Test broken links ..."
               menubarPath="eclipse-web-kit.menu.project/group.project">
         </action>
      </objectContribution>
   </extension>

</plugin>
